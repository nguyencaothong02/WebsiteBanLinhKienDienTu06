@model WebsiteBanLinhKienDienTu06.Context.Customer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <br />
    <h3 class="text-center">Bạn có chắc muốn xóa không?</h3>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thông tin khách hàng</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group row mb-1">
                            <label for="username" class="col-md-3">Username:</label>
                            <p id="username">@Html.DisplayFor(model => model.Username)</p>
                        </div>
                        <div class="form-group row mb-1">
                            <label for="password" class="col-md-3">Password:</label>
                            <p id="password">@Html.DisplayFor(model => model.Password)</p>
                        </div>
                        <div class="form-group row mb-1">
                            <label for="lastname" class="col-md-3">Last Name:</label>
                            <p id="lastname">@Html.DisplayFor(model => model.LastName)</p>
                        </div>
                        <div class="form-group row mb-1">
                            <label for="firstname" class="col-md-3">First Name:</label>
                            <p id="firstname">@Html.DisplayFor(model => model.FirstName)</p>
                        </div>
                        <div class="form-group row mb-1">
                            <label for="gender" class="col-md-3">Gender:</label>
                            <p id="gender">@Html.DisplayFor(model => model.Gender)</p>
                        </div>
                        <div class="form-group row mb-1">
                            <label for="dob" class="col-md-3">Date of Birth:</label>
                            <p id="dob">@Html.DisplayFor(model => model.DateOfBirth)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thông tin liên hệ</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group row mb-1">
                            <label for="address" class="col-md-3">Address:</label>
                            <p id="address">@Html.DisplayFor(model => model.Address)</p>
                        </div>
                        <div class="form-group row mb-1">
                            <label for="email" class="col-md-3">Email:</label>
                            <p id="email">@Html.DisplayFor(model => model.Email)</p>
                        </div>
                        <div class="form-group row mb-1">
                            <label for="phone" class="col-md-3">Phone Number:</label>
                            <p id="phone">@Html.DisplayFor(model => model.PhoneNumber)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="mt-3 text-center">
                <button class="btn btn-light btn-block" onclick="location.href='@Url.Action("Index", "Customer")'">Back to List</button>
            </div>*@
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="mt-3 text-center">
                <input type="submit" value="Delete" class="btn btn-outline-primary" />
                @*<button class="btn btn-light" onclick="location.href='@Url.Action("Index", "Customer")'">Back to List</button>*@
                @Html.ActionLink("Back to List", "Index", "Customer", null, new { @class = "btn btn-light" })
            </div>
        }
    </div>
</div>